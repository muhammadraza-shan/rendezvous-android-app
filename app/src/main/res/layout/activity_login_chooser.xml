<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginChooserActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="318dp"
        android:layout_height="187dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <Button
            android:id="@+id/facebook_login_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/com_facebook_button_icon_white"
            android:paddingLeft="55dp"
            android:paddingRight="30dp"
            android:text="Login Using Facebook"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_100" />

        <Button
            android:id="@+id/email_login_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_email_white_24dp"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:text="Login Using Email"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_100" />

        <Button
            android:id="@+id/phone_login_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_local_phone_white_24dp"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:text="Login Using Phone"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transparentlogo" />
</androidx.constraintlayout.widget.ConstraintLayout>